<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/userinfo_total_background" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <QuickContactBadge
                android:id="@+id/userinfo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/userinfo_image_background" />

            <FrameLayout
                android:id="@+id/userinfo_framelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/userinfo_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:minHeight="55dp"
                    android:text="免费充值"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/userinfo_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:minHeight="55dp"
                    android:text="充值中心"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/userinfo_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:minHeight="55dp"
                    android:text="使用说明"
                    android:textSize="18dp" />
                
                <Button
                    android:id="@+id/userinfo_problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:minHeight="55dp"
                    android:text="反馈问题"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/userinfo_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:minHeight="55dp"
                    android:text="评价与更新"
                    android:textSize="18dp" />
                <Button
                    android:id="@+id/userinfo_tuiguang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card"
                    android:minHeight="55dp"
                    android:text="kenai软件"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>